          <TableColumn fx:id="customerNameColumn" editable="false" prefWidth="191.0" text="Customer Name" />
          <TableColumn fx:id="customerLocationColumn" editable="false" minWidth="0.0" prefWidth="191.0" text="Customer Location" />
